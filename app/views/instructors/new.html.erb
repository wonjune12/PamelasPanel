<div class="uk-card uk-card-body uk-width-1-2@m uk-align-center">
<%= form_with(model: @instructor, class: "uk-form-width-large uk-align-center") do |form| %>
  <legend class="uk-legend uk-align-center">New Instructor</legend>
  <%= form.text_field(:firstname , class: "uk-input uk-margin", placeholder: "First name", required: true)%>
  <%= form.text_field(:lastname, class: "uk-input uk-margin", placeholder: "Last name", required: true)%><br />
  Age : <%= form.select(:age, 1..150, class: "uk-select uk-margin", required: true)%><br/>
  Degree : <%= form.select(:degree, ["Highschool", "Bachelors", "Masters", "Ph.D"], class: "uk-select uk-margin", required: true) %>
  <%= form.email_field(:email, class: "uk-input uk-margin", placeholder: "E-mail", required: true) %><br />
  <%= form.number_field(:salary, class: "uk-input", placeholder: "Salary (in USD)", required: true)%>
  <%= form.submit class: "uk-button uk-button-primary uk-margin"%>
<% end %>
</div>