<% if user_signed_in? %>
  <div class="uk-position-bottom-right uk-margin-right"> Logged in as <strong><%= current_user.email %></strong>  </div>
<%else%>
<div class="uk-card-default uk-card-body uk-width-1-3@m uk-align-center uk-animation-slide-bottom-medium">  
  <%= link_to "Sign up", new_user_registration_path, class: 'uk-button uk-button-primary uk-position-center-left uk-margin-left' %> 
  <%= link_to "Login", new_user_session_path, class: 'uk-button uk-button-primary uk-position-center-right uk-margin-right'  %>  
</div>
<% end%>
