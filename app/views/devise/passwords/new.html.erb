<div class="uk-card-default uk-card-body uk-width-1-3@m uk-align-center uk-animation-slide-bottom-medium">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <legend class="uk-legend uk-align-center">Forgot your password?</legend>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions uk-margin">
    <%= f.submit "Send me reset password instructions", class: "uk-button uk-button-primary uk-margin" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>